{
  "openapi": "3.0.1",
  "info": {
    "title": "UsuarioApp - API para controle de usuários.",
    "description": "API desenvolvida em .Net 7 com EF Core, XUNIT, JWT e RabbitMQ",
    "contact": {
      "name": "Renato Alves vasconcelos",
      "url": "http://www.rav@solucoesltda.com.br",
      "email": "trunfo4608@gmail.com"
    },
    "version": "v1"
  },
  "paths": {
    "/api/usuarios/autentificar": {
      "post": {
        "tags": [
          "Usuarios"
        ],
        "summary": "Serviço para autentificar o usuário e obter token de acesso",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AutenticarRequestDto"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/AutenticarRequestDto"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/AutenticarRequestDto"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/AutenticarResponseDto"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AutenticarResponseDto"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/AutenticarResponseDto"
                }
              }
            }
          }
        }
      }
    },
    "/api/usuarios/criarconta": {
      "post": {
        "tags": [
          "Usuarios"
        ],
        "summary": "Serviço de criação de conta do usuário",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CriarContaRequestDto"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/CriarContaRequestDto"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/CriarContaRequestDto"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/CriarContaResponseDto"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CriarContaResponseDto"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/CriarContaResponseDto"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "AutenticarRequestDto": {
        "required": [
          "email",
          "senha"
        ],
        "type": "object",
        "properties": {
          "email": {
            "minLength": 1,
            "type": "string",
            "format": "email"
          },
          "senha": {
            "minLength": 1,
            "pattern": "^(?=.*[A-Z])(?=.*[a-z])(?=.*\\d)(?=.*[@#$%^&+=]).{8,}$",
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "AutenticarResponseDto": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "nome": {
            "type": "string",
            "nullable": true
          },
          "senha": {
            "type": "string",
            "nullable": true
          },
          "email": {
            "type": "string",
            "nullable": true
          },
          "dataHoraAcesso": {
            "type": "string",
            "format": "date-time",
            "nullable": true
          },
          "accessToken": {
            "type": "string",
            "nullable": true
          },
          "dataHoraExpiracao": {
            "type": "string",
            "format": "date-time",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "CriarContaRequestDto": {
        "required": [
          "email",
          "nome",
          "senha",
          "senhaConfirmacao"
        ],
        "type": "object",
        "properties": {
          "nome": {
            "maxLength": 100,
            "minLength": 8,
            "type": "string"
          },
          "email": {
            "minLength": 1,
            "type": "string",
            "format": "email"
          },
          "senha": {
            "minLength": 1,
            "pattern": "^(?=.*[A-Z])(?=.*[a-z])(?=.*\\d)(?=.*[@#$%^&+=]).{8,}$",
            "type": "string"
          },
          "senhaConfirmacao": {
            "minLength": 1,
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "CriarContaResponseDto": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "nome": {
            "type": "string",
            "nullable": true
          },
          "email": {
            "type": "string",
            "nullable": true
          },
          "dataHoraCadastro": {
            "type": "string",
            "format": "date-time",
            "nullable": true
          }
        },
        "additionalProperties": false
      }
    }
  }
}